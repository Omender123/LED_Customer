<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/log" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_above="@id/sv"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:textSize="22dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/exo_2"

            />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/white"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/exo_2"
                    android:inputType="text"
                    android:lines="1"
                    android:textColorHint="@color/black"
                    android:hint="Name" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/exo_2"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:textColorHint="@color/black"
                    android:hint="Email" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"

                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/exo_2"
                    android:id="@+id/et_register_mobileno"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="10"
                    android:textColorHint="@color/black"
                    android:hint="Enter Mobile No." />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/exo_2"
                    android:id="@+id/et_register_password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:textColorHint="@color/black"
                    android:hint="Password" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"

                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/exo_2"
                    android:id="@+id/et_register_confirmPassword"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:textColorHint="@color/black"
                    android:hint="Confirm Password" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="200dp"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"

                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/black"
                        android:fontFamily="@font/exo_2"
                        android:id="@+id/et_referral_code"
                        android:inputType="text"
                        android:lines="1"
                        android:textColorHint="@color/black"
                        android:hint="Referral Code" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Apply here"
                    android:backgroundTint="#4CAF50"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_applied"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:background="#369E3A"
                    android:drawableLeft="@drawable/tick"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_gravity="center"
                    android:text=" Code Applied"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Type :"
                android:layout_marginLeft="27dp"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/exo_2"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbtn_personal"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/exo_2"
                        android:background="@drawable/button_back"
                        android:button="@android:color/transparent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Personal" />

                    <RadioButton
                        android:id="@+id/rbtn_enterprises"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:background="@drawable/button_back"
                        android:button="@android:color/transparent"
                        android:fontFamily="@font/exo_2"
                        android:layout_weight="1"
                        android:text="Enterprises" />
                </RadioGroup>



            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tv_gst"
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:layout_marginLeft="25dp"
                android:visibility="gone"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/exo_2"
                    android:id="@+id/et_register_gstNo"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:textColorHint="@color/black"
                    android:hint="Enter GST No." />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btn_sign"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="16dp"
                android:text="Sign Up"
                android:backgroundTint="#FF9800"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/exo_2"
                android:layout_gravity="center"
            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</RelativeLayout>