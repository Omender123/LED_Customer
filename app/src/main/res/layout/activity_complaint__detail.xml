<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lightning.master.ledbulb.Complaint.fragfortabs.Complaint_Detail">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_detail"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/exo_2"
                android:gravity="center"
                android:text="Compalaint Detail"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/logo" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/tv_bookingStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/exo_2"
                android:gravity="center_vertical"
                android:text="Reviewed"
                android:textColor="@color/green_light"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/tv_tracking"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_status_shape"
                android:src="@drawable/trackorder"
                android:visibility="visible" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/nestedScrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_moreImages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:background="#BFC7C0C0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_numbrOfImages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+6"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="more"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/bookingImagenew"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:adjustViewBounds="true"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/imageloading" />

                        <ProgressBar
                            android:id="@+id/imageloader"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                    </RelativeLayout>


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/exo_2"
                    android:text="Complaint Detail"
                    android:textColor="@color/black"
                    android:textSize="14dp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginRight="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"

                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="Complaint Id "


                                android:textSize="14dp"


                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/exo_2"

                                android:gravity="center_vertical"
                                android:text=":  "


                                android:textColor="@color/colorAccent"

                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_bookingId"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="---------"
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="Date "
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text=":  "
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_bookingDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="---------"
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="Time "
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text=":  "
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_bookingTime"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="---------"
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:id="@+id/ll_otp_layout"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="OTP "
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text=":  "
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_opt_textvalue"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="****"
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="Transported by "
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text=":  "
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_bookingTransportedBy"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="---------"
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="Distrib. Contact"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text=":  "
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_DistributerContact"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="---------"
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="Description "
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text=":  "
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_description"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:text="---------"
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/exo_2"
                                android:gravity="start"
                                android:text="Address "
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/exo_2"
                                android:gravity="start"
                                android:text=":  "
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_bookingAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/exo_2"
                                android:text="---------"
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/exo_2"
                        android:text="Items Added "
                        android:padding="7dp"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/llCharges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"




                        app:cardCornerRadius="3dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"

                            android:gravity="right"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="6dp"
                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:paddingLeft="2dp"


                                android:text="Total Charges"
                                android:textColor="@color/black"
                                android:textSize="11dp" />

                            <TextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"

                                android:layout_marginRight="6dp"

                                android:fontFamily="@font/exo_2"
                                android:gravity="center_vertical"
                                android:padding="6dp"
                                android:text="₹ 0"

                                android:textColor="#03A9F4"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_price_json"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo_2"
                        android:text="Service Review"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:visibility="visible"
                        />
                        <TextView
                            android:id="@+id/invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/exo_2"
                        android:text="View Invoice"
                            android:textStyle="bold"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:layout_marginRight="15dp"
                            android:padding="6dp"
                            android:backgroundTint="#00BCD4"
                            android:background="@drawable/btn_shapes_capsule"
                        android:textColor="@color/black"
                        android:textSize="14dp"

                        />


                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:visibility="gone"
                        android:layout_marginRight="15dp">

                        <LinearLayout
                            android:id="@+id/ll_detailsScroll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="#f1f1f1"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <RadioGroup
                                android:id="@+id/radioGroup1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="4dp"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/btn_repaire"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/boxx"
                                    android:checked="true"
                                    android:fontFamily="@font/exo_2"
                                    android:gravity="center"
                                    android:text="Repairable"
                                    android:textColor="@color/black" />

                                <RadioButton
                                    android:id="@+id/btn_non_repair"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/boxx"
                                    android:fontFamily="@font/exo_2"
                                    android:gravity="center"
                                    android:text="Non Repairable"
                                    android:textColor="@color/black" />
                            </RadioGroup>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/ll_repairable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_grid_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_non_repairable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewnon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:padding="5dp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_proceed_payment"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"

                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/exo_2"
                    android:gravity="center"
                    android:text="Proceed"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_GiveFeedbback"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/exo_2"
                    android:gravity="center"
                    android:text="Give Feedback"
                    android:textColor="@color/black"
                    android:visibility="gone" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
</layout>