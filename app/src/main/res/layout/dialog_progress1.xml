<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="5dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical">


      <pl.droidsonroids.gif.GifImageView
          android:id="@+id/gf_uploading"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:padding="5dp"
          android:src="@drawable/gif_uploading"
          />
      <pl.droidsonroids.gif.GifImageView
          android:id="@+id/gf_finalizing"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:padding="5dp"
          android:src="@drawable/gif_finalizing"
          />
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tv_dial_title"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:text="UPLOADING THE DATA"/>
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tv_dial_desc"
        android:textColor="#A2A2A2"
        android:layout_width="match_parent"
        android:textSize="13dp"
        android:layout_height="wrap_content"
        android:text="It might take more than a minute"/>



</LinearLayout>
